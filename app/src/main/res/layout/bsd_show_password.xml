    <FrameLayout
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:layout_marginStart="142dp"
        android:background="@drawable/baseline_minimize_24"

        />

    <TextView
        android:id="@+id/bsdTxtID"
        android:layout_width="match_parent"
